<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_canvas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/svd_background"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/def_margin">

        <TextView
            android:id="@+id/tv_title"
            style="@style/MyTextHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="@string/title_dialog"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_content"
            style="@style/MyTextContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_half"
            android:text="@string/content_dialog" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space"
            android:background="@drawable/background_dynamic_menus"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/ed_search"
                style="@style/MyTextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_dynamic_menus"
                android:drawableStart="@drawable/bdm_ic_search_normal"
                android:drawableLeft="@drawable/bdm_ic_search_normal"
                android:drawablePadding="@dimen/def_margin_half"
                android:hint="Search"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:paddingStart="@dimen/def_margin_half"
                android:singleLine="true"
                android:textSize="@dimen/h4" />

            <ImageButton
                android:id="@+id/btn_Scan_Barcode2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/def_margin_half"
                android:layout_marginLeft="@dimen/def_margin_half"
                android:visibility="invisible" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_item"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginTop="@dimen/space"
            android:background="@drawable/corner_rv"
            tools:listitem="@layout/item_rv_single"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never" />

        <LinearLayout
            android:layout_marginTop="@dimen/space"
            android:id="@+id/parent_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <Button
                android:id="@+id/d_btn_cancel_MBT"
                style="@style/MyButtonText"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_marginEnd="@dimen/def_margin_half"
                android:text="@string/cancel"
                android:visibility="gone"
                tools:visibility="visible" />

            <Button
                android:id="@+id/d_btn_ok_MBT"
                style="@style/MyButtonText"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:text="@string/ok"
                android:visibility="gone"
                tools:visibility="visible" />

            <Button
                android:id="@+id/d_btn_cancel_MBO"
                style="@style/MyButtonOutlined"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_marginEnd="@dimen/def_margin_half"
                android:text="@string/cancel"
                android:visibility="gone" />

            <Button
                android:id="@+id/d_btn_ok_MBO"
                style="@style/MyButtonOutlined"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:text="@string/ok"
                android:visibility="gone" />

            <Button
                android:id="@+id/d_btn_cancel_MBC"
                style="@style/MyButtonContained"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_marginEnd="@dimen/def_margin"
                android:text="@string/cancel"
                android:visibility="gone" />

            <Button
                android:id="@+id/d_btn_ok_MBC"
                style="@style/MyButtonContained"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:text="@string/ok"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>